                android:layout_margin="7dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingRight="5dp"
                    android:text="@string/list_of_important_users"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/related_important_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"/>
            </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#969696"/>
                <LinearLayout
                    android:id="@+id/related_switch_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingRight="10dp"
                        android:textSize="18sp"
                        android:text="@string/related_early_warning_no"/>
                    <ImageButton
                        android:id="@+id/related_switch_button_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/on_u35"/>
                </LinearLayout>
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#969696"/>
            </LinearLayout>
            <ListView
                android:id="@+id/Historical_warning_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#969696"/>
                <TextView
                    android:id="@+id/related_warning_user_reply_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:background="@drawable/u10"/>
            </LinearLayout>
            <ListView
                android:id="@+id/related_warning_user_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
            <LinearLayout
                android:id="@+id/related_warning_user_Reply_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <ListView
                    android:id="@+id/related_warning_user_Reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/related_warning_user_reply_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:enabled="true"
                    android:gravity="top"
                    android:minLines="3"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    android:background="@drawable/input_text"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/related_warning_user_reply_confirm_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="回复"
                    android:background="@drawable/u10"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/related_warning_user_reply_cancel_button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/related_warning_user_reply_cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="取消"
                    android:background="@drawable/u10"/>
                <TextView
                    android:id="@+id/related_warning_user_reply_confirm_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="回复"
                    android:background="@drawable/u10"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>